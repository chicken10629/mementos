<div class="container py-5">
  <% if @users.exists? %>
    <% @users.each do |user| %>
      <div class="row pb-2">
        <div class="col col-sm-10 col-md-8 col-lg-6 py-3 mx-auto mb-3 bg-light brown-border">
            <% if user.profile_image.attached? %>
              <%= image_tag user.profile_image, size: "100x100", style: "border-radius: 50px;" %>
            <% else %>
              <%= image_tag 'no_image.jpg', size: "100x100", style: "border-radius: 50px;" %>
            <% end %>
            <p>
              <%= link_to user.name, user_path(user.id) %>
            </p>
            <div class="align-top mb-2">
            <i class="fa-solid fa-comment"></i>
            <%= user.introduction %>
          </div>
          <p id="follow_btn_<%= user.id %>">
            <%= render "public/follows/btn", user: user %>
          </p>
        </div>
      </div>
    <% end %>
  <% else %>
    <div style="min-height:50vh">
      <h5 class="bg-light black-border w-50 mx-auto">
        まだだれもフォローしてません。
      </h5>
    </div>
  <% end %>
</div>