<div class="container mt-5">
  <div class="row">
      <% @posts.each do |post| %>
          <div class="d-flex">
            <div class="card border-dark col-6 col-sm-4 col-md-3 mt-3">
              <% if post.image.attached? %>
                <%= image_tag post.image, class: "card-img-top w-100 p-0" %>
              <% else %>
                <%= image_tag "no_image.jpg", class: "card-img-top w-100 p-0" %>
              <% end %>
              <div class="card-body">
                <p><%= link_to post.title, post_path(post.id) %></p>
                <p><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>