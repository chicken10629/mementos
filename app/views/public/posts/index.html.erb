<div class="container mt-5">
  <div class="row d-flex mx-auto">
      <% @posts.each do |post| %>
          <div class="col-6 col-md-4 col-lg-3">
            <div class="card border-dark mt-4">
              <% if post.image.attached? %>
                <%= image_tag post.image, class: "card-img-top p-2" %>
              <% else %>
                <%= image_tag "no_image.jpg", class: "card-img-top p-2" %>
              <% end %>
              <div class="card-body">
                <p><%= link_to post.title, post_path(post.id) %></p>
                <p><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></p>
              </div>
            </div>
          </div>
      <% end %>
  </div>
</div>