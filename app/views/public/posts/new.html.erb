
<div class="container py-5">
  <% if @post.errors.any? %>
    <div class="alert alert-danger w-50"> 
      <% @post.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
  <div class="row p-3 bg-light d-flex flex-column">

    <%= form_with model: @post, url: posts_path  do |f| %>

      <div class="field mt-3">
        <%= f.label :title, "タイトル" %><br>
        <%= f.text_field :title, autofocus: true, class:"w-50" %>
      </div>

      <div class="field mt-3">
        <%= f.label :body, "エピソード" %><br>
        <%= f.text_area :body, class:"w-50" %>
      </div>

      <div class="field mt-3">
        <%= f.label :images, "画像を選択してください" %><br>
        <%= f.file_field :image, accept: "image/*" %>
        <!-- 後で複数投稿可能にする -->
      </div>

      <%= f.submit "投稿する", class: "btn-primary p-1 mt-1", style: "border: 1px solid #007bff; border-radius: 4px;" %>
    <% end %>

  </div>
</div>