<!-- ユーザー一覧の表示-->
<div class="container py-5">
  <% @users.each do |user| %>
    <div class="row pt-5 red-border mb-3 bg-white" style="max-width: 400px;">
      <div class="pl-3">
          <% if user.profile_image.attached? %>
            <%= image_tag user.profile_image, size: "100x100", style: "object-fit: cover;" %>
          <% else %>
            <%= image_tag 'no_image.jpg', size: "100x100" %>
          <% end %>
          <h5>
            <i class="fa-solid fa-user"></i>
            <%= link_to user.name, user_path(user.id) %>
          </h5>
            <p id="follow_btn_<%= user.id %>">
              <%= render "public/follows/btn", user: user %>
            </p>
      </div>
      <div class="align-top pl-3">
          <i class="fa-solid fa-comment"></i>
          <%= user.introduction.truncate(50) %>
      </div>
    </div>
  <% end %>
</div>
