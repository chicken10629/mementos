<!-- 使用インスタンス変数：@user=current_user、@post=@user.posts -->

<div class="user_profile container m-5">
<!-- １．ゆーざーのアイコン -->
  <div class="row">
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: "150x150", style: "object-fit: cover;" %>
  <% else %>
    <%= image_tag 'no_image.jpg' %>
  <% end %>
    <div class="profile_edit">
      <i class="fa-solid fa-user-pen pl-4"></i>
      <%= link_to "プロフィールを編集する", my_page_edit_path(current_user.id.to_s) %>
    </div>
  </div>
  <div class="row d-flex flex-column">
        <!-- ２．ユーザーの名前 -->
      <h3 class="my-3">
        <%= @user.name %>
      </h3>
      <!-- ３．ユーザーの自己紹介 -->
      <h5 class="mt-3">
        <i class="fa-solid fa-comment"></i>
        コメント
      </h5>
      <p>
        <%= @user.introduction %>
      </p>
      <!-- ５．そのユーザーがいいねをした投稿のページへの移動 -->
      <p class="mt-3">
        <i class="fa-solid fa-heart"></i>
        <%= link_to "いいね一覧を表示", my_favorites_path %>
      </p>
      <p class="mt-3">
        <i class="fa-solid fa-users-rectangle"></i>
        <%= link_to "フォローユーザー一覧を表示", user_followings_path(@user.id) %>
      </p>
      <!-- ６．ユーザーの公開・非公開 表示される文字をis_public? ?で変更する -->
      <p class="mt-4">
        <i class="fa-solid fa-user-lock"></i>
        プロフィール・投稿の公開設定
      </p>
      <%= @user.is_public? ?
        "公開":
        "非公開"
      %>
      <%= link_to @user.is_public? ? "非公開にする" :
       "公開にする", my_page_public_status_path,  method: :patch %>
  </div>
</div>
<!-- ４．ユーザーの投稿一覧⇒各投稿への移動 -->
<h4 class="mb-5">自分の投稿一覧</h4>
<div class="user_posts row mt-5 pl5">
    <% @posts.each do |post| %> <!-- userのidが紐づいた投稿の表示 -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-5">
        <div class="user-post-card">
          <% if post.image.attached? %>
            <%= image_tag post.image.variant(resize: "150x150"), style: "object-fit: cover;" %>
          <% else %>
            <%= image_tag "no_image.jpg", size: "150x150" %>
          <% end %>
          <p>
           <%= link_to post.title, post_path(post.id) %>
          </p>
          <p>
           <%= post.created_at.strftime("%Y/%m/%d %H:%M") %>
          </p>
        </div>
      </div>
    <% end %>
</div>


