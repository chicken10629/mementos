<%= form_with url: search_index_path, method: :get, local: true do |search| %>
  <div class="form-box">
    <%= search.text_field :query, placeholder: "キーワードを入力" %>
    <!-- selectの値（modelやmethod)に各カラムを渡す。条件式で利用 -->
    <div class="button"> 
      <%= search.select :model, options_for_select({"ユーザー名" => "user", "投稿タイトル"=>"post"}) %>
      <%= search.select :method, options_for_select({"完全一致" => "perfect", "部分一致"=>"partial"}) %>
    </div>
    <%= search.submit "検索" %>
  </div>
<% end %>